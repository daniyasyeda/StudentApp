@model StudentApp.Models.LogIn

@{
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Registration</h4>
<hr />
@{
    if (ViewBag.Message != null)
    {
        <div class="text-danger">
            @ViewBag.Message
        </div>
    }
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Name" class="form-control" placeholder="Mrs. Name Example"/>
                <label asp-for="Name" class="control-label">Name</label>
                
                <span asp-validation-for="Name" class="text-danger"></span>
                <small disabled >Example: Mrs. Lilly Wattson</small>
            </div>
           
            <div class="form-floating">
                <input type="password" asp-for="Password" class="form-control"  placeholder="Text"/>
                <label asp-for="Password" class="control-label"></label>
                
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Class" class="form-control"  placeholder="Text"/>
                <label asp-for="Class" class="control-label"></label>
                
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>

            @{
                if (ViewBag.ErrorMessage != null)
                {
                    <div class="text-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
            }
            <div class="form-floating">
                  <input type="password" asp-for="UniqueCode" class="form-control" placeholder="Text"/>
                <label asp-for="UniqueCode" class="control-label"></label>
              
                <span asp-validation-for="UniqueCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
