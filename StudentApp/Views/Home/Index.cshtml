@model StudentApp.Models.LogIn
@{
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
    ViewData["Title"] = "Login";
}
<form asp-action="Login">
<h2>Enter in your Details to Continue Login</h2>
      <div class="form-floating">
           <input asp-for="Name" class="form-control" placeholder="Text" />
                <label asp-for="Name" class="control-label"></label>
               
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
      <div class="form-floating">
           <input type="password" asp-for="Password" class="form-control" placeholder="Text" />
                <label asp-for="Password" class="control-label"></label>
               
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
                
                 <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
  
            <div>
    <a asp-action="Create">Register</a>
    
</div>
</form>

