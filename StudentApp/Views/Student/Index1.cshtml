@model IEnumerable<Student>
<h1 class="fs-2 fw-light">Your Accounts</h1><a class="text-success" asp-action="DeleteRange" onclick="return confirm('Are you sure you want to delete all accounts in the system?')">Clear All Accounts</a>
@if(ViewBag.Message!=null)
{
    <h5>@ViewBag.Message</h5>
}
@if (Model != null)
{
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6 p-2">
            <div class="card bg-light">
                <div class="card-body">
                    <div>
                        <a asp-action="Edit">Edit</a>
                        <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete '@item.Name's' account ?')">Delete</a>
                    </div>
                    <div class="d-flex align-items-start">
    
                    </div>
                    <div>
                    </div>

                </div>
            </div>
        </div>
    }
}

