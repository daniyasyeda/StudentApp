@model StudentGrade

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      
            <div class="form-floating">
                <input asp-for="Name" class="form-control" placeholder="Text" />
                <label asp-for="Name" class="control-label"></label>
                
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Class" class="form-control" placeholder="Text" />
                <label asp-for="Class" class="control-label"></label>
                
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
  
            <div class="form-floating">
                <input asp-for="English" class="form-control" placeholder="Text" />
                <label asp-for="English" class="control-label">English</label>
                
                <span asp-validation-for="English" class="text-danger"></span>
            </div>
   
            <div class="form-floating">
                <input asp-for="Maths" class="form-control" placeholder="Text" />
                <label asp-for="Maths" class="control-label">Math</label>
                
                <span asp-validation-for="Maths" class="text-danger"></span>
            </div>

            <div>
    <small>OutOf Can't be Edited, Please Enter Marks as Per Creation</small>
</div>
          

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}
